<li id="<%= feed_item.id %>">
  <div class="user">
    <span class="user-name"><%= link_to feed_item.user.full_name, feed_item.user %></span> &middot;
    <span>@<%= feed_item.user.username%></span>
    <span class="delete-post">
    <% if current_user?(feed_item.user) %>
      &middot; <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" },title: feed_item.content %>
    <% end %><br>
  </div>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(feed_item.created_at) %> ago
  </span>
</li>