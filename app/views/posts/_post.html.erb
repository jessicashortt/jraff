<li>
  <!-- <span class="avatar"></span><br> -->
  <span class="poster"><strong><%= @user.full_name %></strong> &middot; @<%= @user.username %></span>
  <span class="delete-post">
    <% if current_user?(post.user) %>
      &middot; <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" },title: post.content %>
    <% end %><br>
  </span>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(post.created_at) %> ago
  </span>

</li>